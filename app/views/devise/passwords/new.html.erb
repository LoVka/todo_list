<div class="page-header">
  <h1>Forgot your password?</h1>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
    <%= error_span(resource.errors[:email]) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">  
      <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
