<div class="page-header">
  <h1>Sign up</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
    <%= error_span(resource.errors[:email]) %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>
    <%= error_span(resource[:password]) %>
    <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
    </div>
    <%= error_span(resource[:password_confirmation]) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">  
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
